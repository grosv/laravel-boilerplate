{
    "name": "grosv/laravel-boilerplate",
    "type": "project",
    "description": "An opinionated boilerplate for supercharged Laravel development",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4",
        "facade/ignition": "^2.0",
        "fideloper/proxy": "^4.2",
        "friendsofphp/php-cs-fixer": "^2.16",
        "fruitcake/laravel-cors": "^1.0",
        "fzaninotto/faker": "^1.9.1",
        "guzzlehttp/guzzle": "^6.3",
        "laravel/framework": "^7.0",
        "laravel/tinker": "^2.0",
        "laravel/ui": "^2.0",
        "laravel/vapor-cli": "^1.6",
        "livewire/livewire": "^1.0",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "require-dev": {
        "ext-mysqli": "*",
        "grosv/laravel-git-workflow": "dev-master",
        "grosv/stubby": "dev-master",
        "mockery/mockery": "^1.3.1",
        "nunomaduro/collision": "^4.1",
        "nunomaduro/laravel-mojito": "^0.2.4",
        "phpunit/phpunit": "^8.5",
        "stechstudio/laravel-php-cs-fixer": "^2.1",
        "timacdonald/log-fake": "^1.6"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
